                <img class="raf-image raf-nds-work__image-work raf-fadeded-item" src="/public/images/nds_work1_mobile2.jpg" />
            </div>
            <p class="raf-nds-work__title">eaplay.com</p>
            <div class="raf-nds-work__image">
                <img class="raf-image raf-nds-work__image-work raf-fadeded-item" src="/public/images/nds_work2_desktop.jpg" />
                <img class="raf-image raf-nds-work__image-work raf-fadeded-item" src="/public/images/nds_work2_mobile1.jpg" />
                <img class="raf-image raf-nds-work__image-work raf-fadeded-item" src="/public/images/nds_work2_mobile2.jpg" />
            </div>
        </section>

        <% if (typeof results !== 'undefined') { %>
            <% include ../partials/results %>
        <% } %>
